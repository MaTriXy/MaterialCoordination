<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.bignerdranch.android.materialcoordination"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.StandardBehaviorActivity"
            android:label="@string/title_activity_standard_behavior"
            android:theme="@style/AppThemeNoActionBar"/>
        <activity
            android:name=".activity.ShrinkingFabActivity"
            android:label="@string/title_activity_shrinking_fab"
            android:theme="@style/AppThemeNoActionBar"/>
        <activity
            android:name=".activity.FabToolbarCustomActivity"
            android:label="@string/title_activity_fab_toolbar_custom"
            android:theme="@style/AppThemeNoActionBar"/>

    </application>

</manifest>
